<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="add-publisher-fk-to-books" author="viktor romanenko">
        <addColumn tableName="books">
            <column name="publisher_id" type="BIGINT"/>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="books"
                baseColumnNames="publisher_id"
                constraintName="fk_books_publisher"
                referencedTableName="publishers"
                referencedColumnNames="id"/>

        <rollback>
            <dropForeignKeyConstraint baseTableName="books" constraintName="fk_books_publisher"/>
            <dropColumn tableName="books" columnName="publisher_id"/>
        </rollback>
    </changeSet>
</databaseChangeLog>